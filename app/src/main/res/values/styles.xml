<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="estilo_texto">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="estilo_edit_text">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">#727272</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="etilo_boton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/boton_redondo</item>
    </style>


</resources>
